<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.swain.myapplication.MainActivity">

    <EditText
        android:id="@+id/enterCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Enter amount in dollars"
        android:inputType="number" />

    <Button
        android:id="@+id/convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterCurrency"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="convertUSToEuro"
        android:text="Convert" />

    <ImageView
        android:id="@+id/moneyPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/convert"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/us" />
</android.widget.RelativeLayout>
